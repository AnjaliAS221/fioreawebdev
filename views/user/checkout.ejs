                                        <div class="product-details">
                                            <h5 class="mb-1">
                                                <%= item.productId.productName %>
                                            </h5>
                                            <p class="mb-1">Quantity: <%= item.quantity %>
                                            </p>
                                            <p class="mb-0 text-success">₹<%= (item.productId.salePrice *
                                                    item.quantity).toLocaleString() %>
                                            </p>
                                        </div>
                                    </div>
                                    <% }); %>
