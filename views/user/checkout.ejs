                                        <div class="card-body">
                                            <strong class="d-block mb-2">
                                                <%= addr.addressType %>
                                            </strong>
                                            <p class="mb-1">
                                                <%= addr.name %>
                                            </p>
                                            <p class="mb-1">
                                                <%= addr.city %>, <%= addr.state %> - <%= addr.pincode %>
                                            </p>
                                            <p class="mb-0">
                                                <%= addr.phone %>
                                            </p>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <div class="alert alert-info">
                                                <p class="mb-0">No addresses available. <a href="/addAddress"
