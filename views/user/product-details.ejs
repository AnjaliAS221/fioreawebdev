        .guide-link {
            margin: 0;
        }

        .guide-link a {
            text-decoration: none;
            font-size: 0.95rem;
            color: #444;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: color 0.3s ease;
        }

        .guide-link a:hover {
            color: #3BB77E;
        }

        .guide-link i {
            font-size: 1.2rem;
            display: inline-block !important;
            visibility: visible !important;
