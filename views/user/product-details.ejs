    <script>
        const isInWishlist = JSON.parse('<%- JSON.stringify(isInWishlist || false) %>');
        let currentWishlistState = isInWishlist;


        function initializeWishlistState() {
            const wishlistBtn = document.querySelector('.action-btn.hover-up');
            const wishlistIcon = wishlistBtn.querySelector('i');

            wishlistBtn.classList.remove('in-wishlist');
            if (wishlistIcon.nextSibling) {
                wishlistIcon.nextSibling.textContent = ' Wishlist';
            }

            if (currentWishlistState) {
                wishlistBtn.classList.add('in-wishlist');
                if (wishlistIcon.nextSibling) {
                    wishlistIcon.nextSibling.textContent = ' Wishlisted';
                } else {
                    wishlistIcon.after(document.createTextNode(' Wishlisted'));
                }
            }
        }


        function addToWishlist(productId) {
            const wishlistBtn = document.querySelector('.action-btn.hover-up');
            const wishlistIcon = wishlistBtn.querySelector('i');

            $.ajax({
                url: '/toggleWishlist',
                method: 'POST',
                data: { productId: productId },
                success: (response) => {
                    if (response.status) {
                        currentWishlistState = !currentWishlistState;
                        wishlistBtn.classList.toggle('in-wishlist');

                        if (wishlistIcon.nextSibling) {
                            wishlistIcon.nextSibling.textContent = currentWishlistState ? ' Wishlisted' : ' Wishlist';
                        }

                        Swal.fire({
                            title: currentWishlistState ? "Added to wishlist" : "Removed from wishlist",
                            text: response.message,
                            icon: currentWishlistState ? 'success' : 'info',
                            timer: 2000,
                            showConfirmButton: true,
                            confirmButtonColor: '#800000'
                        });

                        const wishlistCount = document.querySelector('.pro-count.blue');
                        if (wishlistCount) {
                            const currentCount = parseInt(wishlistCount.textContent);
                            wishlistCount.textContent = currentWishlistState ? currentCount + 1 : currentCount - 1;
                        }
                    }
                },
                error: (xhr) => {
                    if (xhr.status === 401) {
                        window.location.href = "/login";
                    } else {
                        Swal.fire({
                            title: 'Error',
                            text: 'There was an error while updating your wishlist',
                            icon: 'error',
                            timer: 2000,
                            showConfirmButton: true
                        });
                    }
                }
            });
        }

        const colorSizeMap = JSON.parse('<%- JSON.stringify(product.colorSizeMap) %>');
        const variants = JSON.parse('<%- JSON.stringify(product.variants) %>');
        const colorSelect = document.getElementById("color-select");
        const sizeBoxesContainer = document.getElementById("size-boxes");
        const stockInfo = document.getElementById("stock-info");
        let quantity = 1;
        const maxCartQuantity = 5;
        let currentStock = 0;


        function updateStockInfo(selectedColor, selectedSize) {
            if (!selectedColor || !selectedSize) {
                stockInfo.textContent = 'Select a color and size to view stock';
                stockInfo.className = 'text-muted';
                currentStock = 0;
                quantity = 1;
                document.getElementById('quantity').textContent = quantity;
                return;
            }

            const variant = variants.find(v => v.color === selectedColor);
            const sizeInfo = variant?.sizes.find(s => s.size === selectedSize);

            if (sizeInfo) {
                currentStock = sizeInfo.stock;

                if (quantity > currentStock) {
                    quantity = currentStock > 0 ? currentStock : 1;
                    document.getElementById('quantity').textContent = quantity;
                }


                if (currentStock <= 0) {
                    stockInfo.innerHTML = `<i class="fas fa-times-circle"></i> Out of Stock`;
                    stockInfo.className = 'text-danger';
                } else if (currentStock === 1) {
                    stockInfo.innerHTML = `<i class="fas fa-exclamation-circle"></i> Hurry! Only 1 left in stock!`;
                    stockInfo.className = 'text-warning';
                } else if (currentStock === 2) {
                    stockInfo.innerHTML = `<i class="fas fa-exclamation-circle"></i> Only 2 left! Order soon!`;
                    stockInfo.className = 'text-warning';
                } else if (currentStock === 3) {
                    stockInfo.innerHTML = `<i class="fas fa-exclamation-circle"></i> Limited stock! Just 3 available!`;
                    stockInfo.className = 'text-warning';
                } else if (currentStock > 3 && currentStock <= 10) {
                    stockInfo.innerHTML = `<i class="fas fa-exclamation-circle"></i> Only a few left!`;
                    stockInfo.className = 'text-warning';
                } else {
                    stockInfo.innerHTML = `<i class="fas fa-check-circle"></i> In Stock`;
                    stockInfo.className = 'text-success';
                }

            }
        }

        function setupQuantityControls() {
            const qtyUpBtn = document.querySelector('.qty-up');
            const qtyDownBtn = document.querySelector('.qty-down');
            const qtyVal = document.getElementById('quantity');
            const maxLimit = 5;

            qtyVal.textContent = quantity;

            qtyUpBtn.addEventListener('click', (e) => {
                e.preventDefault();

                if (quantity < maxLimit && quantity < currentStock) {
                    quantity++;
                } else {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Quantity Limit',
                        text: quantity >= maxLimit
                            ? 'Maximum purchase limit is 5 items per order'
                            : 'Stock Limit Exceeded',
                        confirmButtonColor: '#800000'
                    });
                }

                qtyVal.textContent = quantity;
            });

            qtyDownBtn.addEventListener('click', (e) => {
                e.preventDefault();

                if (quantity > 1) {
                    quantity--;
                }

                qtyVal.textContent = quantity;
            });
        }

        function handleColorChange(e) {
            quantity = 1;
            document.getElementById('quantity').textContent = quantity;
            updateSizeOptions(e.target.value);
        }


        function updateSizeOptions(selectedColor) {
            sizeBoxesContainer.innerHTML = '';
            currentStock = 0;

            if (!selectedColor) {
                const message = document.createElement('div');
                message.className = 'text-muted';
                message.textContent = 'Please select a color first';
                sizeBoxesContainer.appendChild(message);
                return;
            }

            if (colorSizeMap[selectedColor]) {
                colorSizeMap[selectedColor].forEach(sizeObj => {
                    const sizeBox = document.createElement('div');
                    sizeBox.className = 'size-box';

                    const sizeText = document.createElement('span');
                    sizeText.textContent = sizeObj.size;
                    sizeBox.appendChild(sizeText);

                    if (sizeObj.stock <= 0) {
                        sizeBox.classList.add('disabled');
                    } else {
                        const stockIndicator = document.createElement('span');
                        stockIndicator.className = `stock-indicator ${sizeObj.stock > 10 ? 'in-stock' : 'low-stock'}`;
                        sizeBox.appendChild(stockIndicator);

                        sizeBox.addEventListener('click', () => {
                            document.querySelectorAll('.size-box').forEach(box =>
                                box.classList.remove('selected'));
                            sizeBox.classList.add('selected');
                            updateStockInfo(selectedColor, sizeObj.size);
                        });
                    }

                    sizeBoxesContainer.appendChild(sizeBox);
                });
            }
        }


        function updateStockLimit(selectedColor, selectedSize) {
            if (!selectedColor || !selectedSize) return;

            const variant = variants.find(v => v.color === selectedColor);
            const sizeInfo = variant?.sizes.find(s => s.size === selectedSize);

            if (sizeInfo) {
                currentStock = sizeInfo.stock;

                if (quantity > currentStock) {
                    quantity = currentStock;
                }

                document.getElementById('quantity').textContent = quantity;
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            setupQuantityControls();
            setupModals();
            initializeWishlistState();
        });


        function buyNow(productId) {
            if (quantity > 5) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Quantity Limit',
                    text: 'Maximum purchase limit is 5 items',
                    confirmButtonColor: '#800000'
                });
                return false;
            }

            const selectedColor = colorSelect.value
            const selectedSize = document.querySelector('.size-box.selected')?.querySelector('span')?.textContent;

            if (!selectedColor || !selectedSize) {
                console.warn("Validation failed: Missing color or size selection");
                Swal.fire({
                    icon: 'warning',
                    title: 'Please Select Options',
                    text: 'Please select both color and size before proceeding.',
                    confirmButtonColor: '#800000'
                });
                return;
            }

            if (quantity > currentStock) {
                console.warn("Stock validation failed: Quantity exceeds available stock");
                Swal.fire({
                    icon: 'warning',
                    title: 'Stock Limit Exceeded',
                    text: 'Insufficient Stock',
                    confirmButtonColor: '#800000'
                });
                return;
            }

            const variant = variants.find(v => v.color === selectedColor);

            if (!variant) {
                console.error("Error: No variant found for selected color");
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Invalid color variant selected.',
                    confirmButtonColor: '#800000'
                });
                return;
            }


            const sizeVariant = variant.sizes.find(s => s.size === selectedSize);


            if (!sizeVariant) {
                console.error("Error: No size variant found for selected size");
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Invalid size variant selected.',
                    confirmButtonColor: '#800000'
                });
                return;
            }

            if (sizeVariant.stock < quantity) {
                console.warn("Stock validation failed: Quantity exceeds available stock for size variant");
                Swal.fire({
                    icon: 'warning',
                    title: 'Stock Limit Exceeded',
                    text: `Sorry, you cannot select more than what's available in stock.`,
                    confirmButtonColor: '#800000'
                });
                return;
            }


            const queryParams = new URLSearchParams({
                id: productId,
                color: selectedColor,
                size: selectedSize,
                quantity: quantity,
                variantId: variant._id
            }).toString();


            window.location.href = `/checkout?${queryParams}`;
        }



        function addToCart(productId) {

            if (quantity > 5) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Quantity Limit',
                    text: 'Maximum purchase limit is 5 items',
                    confirmButtonColor: '#800000'
                });
                return false;
            }

            const selectedColor = colorSelect.value;
            const selectedSize = document.querySelector('.size-box.selected')?.querySelector('span')?.textContent;

            if (!selectedColor || !selectedSize) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Please Select Options',
                    text: 'Please select both color and size before adding to cart.',
                    confirmButtonColor: '#800000'
                });
                return;
            }

            if (quantity > currentStock) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Stock Limit Exceeded',
                    text: `Sorry, we don't have enough stock for your requested quantity.`,
                    confirmButtonColor: '#800000'
                });
                return;
            }

            fetch('/add-to-cart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId,
                    quantity: quantity,
                    color: selectedColor,
                    size: selectedSize
                }),
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Added to Cart',
                            text: 'Product added to cart successfully!',
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: 'Go to Cart',
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/cart';
                            }
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: data.message || 'Error adding product to cart',
                            confirmButtonColor: '#d33',
                        });
                    }
                })
                .catch(error => {
                    if (error.message === "Unauthorized: Please log in first.") {
                        window.location.href = "/login";
                    } else {
                        console.error('Error:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Something went wrong. Please try again later.',
                            confirmButtonColor: '#d33',
                        });
                    }
                });
        }


        function setupModals() {
            const sizeGuideModal = document.getElementById('size-guide-modal');
            const colorGuideModal = document.getElementById('color-guide-modal');
            const sizeGuideLink = document.getElementById('size-guide-link');
            const colorGuideLink = document.getElementById('color-guide-link');

            sizeGuideLink.onclick = function (e) {
                e.preventDefault();
                sizeGuideModal.style.display = 'block';
            };

            colorGuideLink.onclick = function (e) {
                e.preventDefault();
                colorGuideModal.style.display = 'block';
            };

            document.querySelectorAll('.close').forEach(function (closeBtn) {
                closeBtn.onclick = function () {
                    sizeGuideModal.style.display = 'none';
                    colorGuideModal.style.display = 'none';
                };
            });

            window.onclick = function (event) {
                if (event.target == sizeGuideModal) {
                    sizeGuideModal.style.display = 'none';
                }
                if (event.target == colorGuideModal) {
                    colorGuideModal.style.display = 'none';
                }
            };
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

    </script>



