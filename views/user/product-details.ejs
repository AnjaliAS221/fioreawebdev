    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


    <style>
        .product-extra-link2 {
            display: flex;
            gap: 15px;
            align-items: center;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .detail-qty {
            display: inline-flex;
            align-items: center;
            border: 1px solid #e4e4e4;
            border-radius: 4px;
            height: 46px;
            min-width: 120px;
        }

        .qty-val {
            width: 40px;
            text-align: center;
            padding: 0 8px;
            font-size: 14px;
        }

        .qty-down,
        .qty-up {
            background-color: #800000;
            border: none;
            color: white;
            font-size: 14px;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 100%;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .qty-down:hover,
        .qty-up:hover {
            background-color: #800000 !important;
            color: white !important;
        }

        .qty-down.disabled,
        .qty-up.disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .button {
            height: 46px;
            line-height: 46px;
            padding: 0 25px;
            border-radius: 4px;
            font-weight: 500;
            border: none;
            transition: all 0.3s ease;
            white-space: nowrap;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            min-width: 160px;
        }

