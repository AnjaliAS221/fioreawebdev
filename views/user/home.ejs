<%- include("../../views/partials/user/header") %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            transition: all 0.4s ease;
        }

        body {
            font-family: 'Poppins', sans-serif;
            line-height: 1.6;
            background-color: #fff;
            color: #333;
        }

        .container {
            width: 92%;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .hero {
            position: relative;
            height: 85vh;
            overflow: hidden;
        }

        .hero__items {
            height: 100%;
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .hero__items::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.4);
            z-index: 1;
        }

        .hero__text {
            text-align: center;
            animation: fadeInUp 1.2s ease-out;
            z-index: 2;
            position: relative;
            padding: 20px;
        }

        .hero__text h2 {
            font-size: 5rem;
            margin-bottom: 20px;
            color: white;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
            letter-spacing: 8px;
            font-weight: 700;
        }

        .hero__text p {
            font-size: 1.8rem;
            margin-bottom: 35px;
            color: white;
            text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.5);
            letter-spacing: 3px;
        }

        .primary-btn {
            display: inline-block;
            padding: 15px 35px;
            background-color: #fff;
            color: #333;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 2px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
            z-index: 3;
        }

        .primary-btn:hover {
            color: #fff;
            background-color: #333;
            transform: translateY(-3px);
        }

        .explore-style {
            padding: 80px 0;
            background-color: #f9f9f9;
        }

        .explore-title {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 50px;
            font-weight: 300;
            letter-spacing: 2px;
            color: #333;
            position: relative;
        }

        .explore-title:after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 2px;
            background-color: #333;
        }

        .category-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 30px;
            padding: 20px;
        }

        .category-item {
            position: relative;
            overflow: hidden;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        .category-item a {
            text-decoration: none;
            color: #333;
        }

        .category-item img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .category-item:hover img {
            transform: scale(1.1);
        }

        .category-name {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: rgba(255, 255, 255, 0.9);
            padding: 15px;
            font-size: 0.9rem;
            font-weight: 500;
            letter-spacing: 2px;
            text-transform: uppercase;
            text-align: center;
            transform: translateY(0);
            transition: transform 0.3s ease;
        }

        .category-item:hover .category-name {
            transform: translateY(-5px);
        }

        .collections-showcase {
            padding: 80px 20px;
            background-color: #fff;
        }

        .collections-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 50px;
            align-items: center;
        }

        .collection-item {
            position: relative;
            overflow: hidden;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .collection-image {
            position: relative;
            overflow: hidden;
        }

        .collection-image img {
            width: 100%;
            height: 600px;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .collection-item:hover .collection-image img {
            transform: scale(1.05);
        }

        .collection-content {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 30px;
            background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
            color: #fff;
            text-align: center;
        }

        .collection-content h2 {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #fff;
            letter-spacing: 2px;
        }

        .shop-btn {
            display: inline-block;
            padding: 12px 25px;
            background-color: #fff;
            color: #333;
            text-decoration: none;
            font-weight: 500;
            border-radius: 5px;
            transition: all 0.3s;
            letter-spacing: 1px;
        }

        .shop-btn:hover {
            background-color: #333;
            color: #fff;
            transform: translateY(-3px);
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 1024px) {
            .hero__text h2 {
                font-size: 4rem;
            }

            .collection-image img {
                height: 500px;
            }
        }

        @media (max-width: 768px) {
            .hero__text h2 {
                font-size: 3rem;
            }

            .collections-container {
                grid-template-columns: 1fr;
            }

            .collection-image img {
                height: 400px;
            }

            .category-grid {
                grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            }
        }

        @media (max-width: 480px) {
            .hero__text h2 {
                font-size: 2.5rem;
            }

            .hero__text p {
                font-size: 1.2rem;
            }

            .explore-title {
                font-size: 2rem;
            }

            .collection-content h2 {
                font-size: 1.5rem;
            }
        }
    </style>

    <section class="relative h-[85vh] bg-cover bg-center flex items-center justify-center text-center text-white"
