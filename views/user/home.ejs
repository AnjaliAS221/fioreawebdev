<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    transition: all 0.3s ease;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    line-height: 1.6;
    background-color: #f4f7f6;
    color: #333;
}

.container {
    width: 90%;
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 15px;
}

/* Hero Section */
.hero {
    position: relative;
    overflow: hidden;
}

.hero__items {
    position: relative;
    height: 70vh;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    text-align: center;
    
}

.hero__text {
    animation: fadeIn 1s ease-out;
    
}

.hero__text h2 {
    font-size: 4rem;
    margin-bottom: 15px;
    letter-spacing: 2px;
    color: white; /* Make heading white */
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5); 
}

.hero__text p {
    font-size: 1.5rem;
    margin-bottom: 30px;
    font-style: italic;
    color: white; /* Make paragraph white */
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
}

/* Primary Button */
.primary-btn {
    display: inline-block;
    padding: 12px 25px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.primary-btn:hover {
    background-color: #0056b3;
    transform: translateY(-3px);
    box-shadow: 0 6px 8px rgba(0,0,0,0.2);
}

/* Explore Style Section */
.explore-style {
    padding: 40px 0;
    background-color: #fff;
}

.explore-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 30px;
    font-weight: 400;
    letter-spacing: 1px;
}

.category-grid {
    display: flex;
    justify-content: center;
    gap: 15px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
    overflow-x: auto;
}

.category-item {
    flex: 0 0 180px;
    text-align: center;
    transition: transform 0.3s ease;
}

.category-item:hover {
    transform: translateY(-5px);
}

.category-item a {
    text-decoration: none;
    color: #333;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.category-item img {
    width: 180px;
    height: 180px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 10px;
}

.category-name {
    font-size: 0.8rem;
    font-weight: 500;
    letter-spacing: 1px;
    text-transform: uppercase;
}

/* Best Sellers Section */
.best-sellers {
    padding: 60px 0;
    background-color: #fff;
}

.section-title {
    text-align: center;
    font-size: 28px;
    margin-bottom: 40px;
    font-weight: 400;
    color: #333;
    position: relative;
}

.section-title:after {
    content: '';
    display: block;
    width: 50px;
    height: 2px;
    background: #333;
    margin: 10px auto;
}

.products-slider {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    padding: 20px 0;
    scroll-behavior: smooth;
}

.product-card {
    flex: 0 0 300px;
    min-width: 300px;
    position: relative;
}

.product-card a {
    text-decoration: none;
    color: inherit;
}

.product-image {
    width: 100%;
    height: 400px;
    overflow: hidden;
    position: relative;
}

.product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.product-info {
    padding: 15px 0;
    text-align: center;
}

.product-name {
    font-size: 16px;
    margin-bottom: 8px;
    font-weight: 400;
    color: #333;
}

.product-price {
    font-size: 14px;
    color: #666;
}

/* Collections Showcase */
.collections-showcase {
    padding: 40px 20px;
    background-color: #fff;
    margin-top: 40px;
}

.collections-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
}

.collection-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 20px;
}

.collection-image img {
    width: 100%;
    max-width: 500px;
    height: auto;
    border-radius: 8px;
}

.collection-content h2 {
    font-size: 1.8rem;
    margin-bottom: 20px;
    color: #333;
}

.shop-btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #7B2C2C;
    color: #fff;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    transition: background-color 0.3s;
}

.shop-btn:hover {
    background-color: #5A1F1F;
}

/* Responsive Styles */
@media (max-width: 768px) {
    .collections-container {
        grid-template-columns: 1fr;
    }
    
    .category-grid {
        justify-content: flex-start;
    }
    
    .category-item {
        flex: 0 0 150px;
    }
    
    .category-item img {
        width: 150px;
        height: 150px;
    }
    
    .hero__items {
        height: 50vh;
    }
    
    .hero__text h2 {
        font-size: 2rem;
    }
    
    .product-card {
        flex: 0 0 250px;
        min-width: 250px;
    }
    
    .product-image {
        height: 350px;
    }
}
</style>

<section class="hero">
    <div class="hero__slider owl-carousel">
        <div class="hero__items set-bg" data-setbg="img/hero/hero-1.webp">
            <div class="container">
                <div class="row">
                    <div class="col-xl-5 col-lg-12 col-md-8">
                        <div class="hero__text">
                            <h2>FIOREA</h2>
                            <p>Wear the art of flowers</p>
                            <a href="/shop" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="hero__items set-bg" data-setbg="img/hero/hero-3.webp">
            <div class="container">
                <div class="row">
                    <div class="col-xl-5 col-lg-7 col-md-8">
                        <div class="hero__text">
                            <h2>FIOREA</h2>
                            <p>Wear the art of flowers</p>
                            <a href="/shop" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="explore-style">
    <div class="container">
        <h2 class="explore-title">Explore Your Style</h2>
        <div class="category-grid">
            <div class="category-item">
                <a href="/shop/print">
                    <img src="/img/categories/print.webp" alt="Print Collection">
                    <span class="category-name">PRINT</span>
                </a>
            </div>
            <div class="category-item">
                <a href="/shop/occasional">
                    <img src="/img/categories/occasional.webp" alt="Occasional Wear">
                    <span class="category-name">OCCASIONAL WEAR</span>
                </a>
            </div>
            <div class="category-item">
                <a href="/shop/embroidery">
                    <img src="/img/categories/embroidery.webp" alt="Embroidery Collection">
                    <span class="category-name">EMBROIDERY</span>
                </a>
            </div>
            <div class="category-item">
                <a href="/shop/sustain">
                    <img src="/img/categories/sustain.webp" alt="Sustain Wear">
                    <span class="category-name">SUSTAIN WEAR</span>
                </a>
            </div>
            <div class="category-item">
                <a href="/shop/coords">
                    <img src="/img/categories/coords.webp" alt="Co-ords Sets">
                    <span class="category-name">CO-ORDS SETS</span>
                </a>
            </div>
        </div>
    </div>
</section>

<section class="best-sellers">
    <div class="container">
        <h2 class="section-title">Best Sellers</h2>
        <div class="products-slider">
            <% if(products && products.length > 0) { %>
                <% console.log("Products:", products); %>
                <% products.forEach(function(product) { %>
                    <div class="product-card">
                        <a href="/productDetails?id=<%= product._id %>">
                            <div class="product-image">
                                <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                            </div>
                            <div class="product-info">
                                <h3 class="product-name"><%= product.productName %></h3>
                                <p class="product-price">Rs. <%= product.salePrice %></p>
                            </div>
                        </a>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</section>

