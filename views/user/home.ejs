                    <a href="/shop">
                        <img src="/img/categories/occasional.webp" alt="Occasional Wear">
                        <span class="category-name">OCCASIONAL WEAR</span>
                    </a>
                </div>
                <div class="category-item">
                    <a href="/shop">
                        <img src="/img/categories/embroidery.webp" alt="Embroidery Collection">
                        <span class="category-name">EMBROIDERY</span>
                    </a>
                </div>
                <div class="category-item">
                    <a href="/shop">
                        <img src="/img/categories/sustain.webp" alt="Sustain Wear">
                        <span class="category-name">SUSTAIN WEAR</span>
                    </a>
                </div>
                <div class="category-item">
                    <a href="/shop">
                        <img src="/img/categories/coords.webp" alt="Co-ords Sets">
                        <span class="category-name">CO-ORDS SETS</span>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="collections-showcase">
        <div class="collections-container">
            <div class="collection-item">
                <div class="collection-image">
                    <img src="/img/banner/banner-1.webp" alt="Women Ethnic Collection">
                </div>
                <div class="collection-content">
                    <h2>Women - Ethnic</h2>
                    <a href="/shop" class="shop-btn">SHOP THE COLLECTION</a>
                </div>
            </div>

            <div class="collection-item">
                <div class="collection-image">
                    <img src="/img/banner/banner-2.webp" alt="Women Contemporary Collection">
                </div>
                <div class="collection-content">
                    <h2>Women - Contemporary</h2>
                    <a href="/shop" class="shop-btn">SHOP THE COLLECTION</a>
                </div>
            </div>
        </div>
    </section>

