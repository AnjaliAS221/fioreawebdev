    <style>
        /* Maintain existing user dropdown styles */
        .dropdown {
            position: relative;
            display: inline-block;
            font-family: 'Nunito Sans', sans-serif;
        }
    
        .dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: #ffffff;
            min-width: 160px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.15);
            border-radius: 8px;
            z-index: 1;
            padding: 8px 0;
            border: 1px solid #e0e0e0;
        }
    
        .dropdown-content a {
            color: #333;
            padding: 10px 20px;
            text-decoration: none;
            display: block;
            font-size: 14px;
            text-align: left;
            transition: background-color 0.3s ease, color 0.3s ease;
            width: 100%;
            border-bottom: 1px solid #f0f0f0;
        }
    
        .dropdown-content a:last-child {
            border-bottom: none;
        }
    
        .dropdown-content a:hover {
            background-color: #f4f4f4;
            color: #000;
        }
    
        .dropdown:hover .dropdown-content {
            display: block;
        }
    
        /* Style for user name link */
        .sign-in-link {
            font-weight: 600;
            color: #000;
            text-decoration: none;
            font-size: 15px;
            padding: 8px;
            transition: color 0.3s ease;
        }
    
        .sign-in-link:hover {
            color: #007bff;
        }
    
        /* Center the shipping worldwide text */
        .header__top__left {
            text-align: center;
        }
        
        .header__top__left p {
            display: inline-block;
            margin: 0;
            padding: 10px 0;
        }
    
        /* Logo image styling */
        .header__logo {
            padding: 15px 0;
        }
    
        .header__logo img {
            max-height: 60px;
            width: auto;
        }
    
        /* Navigation menu styling with hover underline */
            .header__menu ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .header__menu ul li {
            position: relative;
            /* list-style: none; */
            display: inline-block;
            margin-right: 35px;
        }
    
        .header__menu ul li a {
            font-size: 15px;
            color: #111111;
            display: block;
            padding: 2px 0;
            position: relative;
            text-decoration: none;
        }
    
        /* Underline effect on hover */
        .header__menu ul li a::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            background: #111111;
            left: 0;
            bottom: -2px;
            transition: width 0.3s ease;
        }
    
        .header__menu ul li:hover > a::after {
            width: 100%;
        }
    
        /* Menu dropdown styling */
        .header__menu ul li ul.dropdown {
            position: absolute;
            left: 0;
            top: 100%;
            width: 200px;
            background: #ffffff;
            z-index: 999;
            padding: 10px 0;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            opacity: 0;
            visibility: hidden;
            pointer-events: none;
            transition: all 0.3s ease;
        }
    
        .header__menu ul li:hover ul.dropdown {
            opacity: 1;
            visibility: visible;
            pointer-events: auto;
        }
    
        .header__menu ul li ul.dropdown li {
            display: block;
            margin: 0;
            width: 100%;
        }
    
        .header__menu ul li ul.dropdown li a {
            padding: 8px 20px;
            text-decoration: none;
            color: #111;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .header__menu ul li ul.dropdown li a:hover {
            background-color: #f4f4f4;
            color: #000;
        }
    
       
        .arrow_carrot-down,
        .header__menu ul li i {
            display: none !important;
        }


        
        </style>
        
