<%- include("../../views/partials/admin/header") %>
<title>Return Data Requests</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    :root {
        --primary-color: #3498db;
        --secondary-color: #2ecc71;
        --danger-color: #e74c3c;
        --bg-light: #f4f6f7;
    }

    body {
        background-color: var(--bg-light);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .return-card {
        border-radius: 10px;
        margin-bottom: 15px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

    .return-card:hover {
        transform: translateY(-5px);
    }

    .return-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: var(--primary-color);
        color: white;
        padding: 10px 15px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .status-badge {
        font-size: 0.8rem;
        padding: 0.3rem 0.6rem;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .pagination {
        justify-content: center;
        margin-top: 20px;
    }

    @media (max-width: 768px) {
        .return-card {
            flex-direction: column;
        }
        .return-card-header {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>
</head>

<body>
    <div class="container py-4">
        <h1 class="mb-4 text-center">Return Request Tracker</h1>
        
        <div class="row">
            <% returns.forEach(returnData => { %>
                <div class="col-12 col-md-6 col-lg-4 mb-3">
                    <div class="card return-card">
                        <div class="return-card-header">
                            <div>
                                <strong>Order #<%= returnData.orderId?.orderId.toString().slice(-8).toUpperCase() || 'N/A' %></strong>
                            </div>
                            <% 
                            let badgeClass;
                            if(returnData.returnDataStatus === 'approved') {
                                badgeClass = 'bg-success';
                            } else if(returnData.returnDataStatus === 'rejected') {
                                badgeClass = 'bg-danger';
                            } else {
                                badgeClass = 'bg-warning text-dark';
                            }
                            %>
                            <span class="badge <%= badgeClass %> status-badge">
                                <%= returnData.returnStatus || 'pending' %>
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <small class="text-muted">User</small>
                                    <p class="fw-bold"><%= returnData.userId?.name || 'N/A' %></p>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Refund Amount</small>
                                    <p class="fw-bold">â‚¹<%= (returnData.refundAmount || 0).toFixed(2) %></p>
                                </div>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Return Reason</small>
                                <p class="text-truncate">
                                    <%= returnData.reason || 'No reason provided' %>
                                </p>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <%= new Date(returnData.createdAt || Date.now()).toLocaleDateString('en-US', { 
                                        year: 'numeric',
                                        month: 'short',
                                        day: 'numeric'
                                    }) %>
                                </small>
                                <% if(returnData.status === 'Pending') { %> 
                                    <div class="action-buttons">
                                        <form action="/admin/returnDataUpdate?id=<%= returnData._id %>" method="POST">
                                            <button type="submit" name="status" value="Approved" 
                                                class="btn btn-sm btn-success">
                                                Approve
                                            </button>
                                            <button type="submit" name="status" value="Rejected"
                                                class="btn btn-sm btn-danger">
                                                Reject
                                            </button>
                                        </form>
                                    </div>
                                <% } else { %>
                                    <span class="text-muted small">Processed</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    
        <nav aria-label="Return requests pagination">
            <ul class="pagination">
                <% if(hasPrevPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                    </li>
                <% } %>
    
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
    
                <% if(hasNextPage) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%- include("../../views/partials/admin/footer") %>