    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.13/jspdf.plugin.autotable.min.js"></script>

    <script>
       document.addEventListener('DOMContentLoaded', function() {
    const dateRangeSelect = document.getElementById('dateRangeSelect');
    const startDateInput = document.getElementById('startDate');
    const endDateInput = document.getElementById('endDate');
    const filterForm = document.getElementById('filterForm');
    
    // Date range selection handler
    dateRangeSelect.addEventListener('change', function() {
        if (this.value) {
            // Clear custom date inputs
            startDateInput.value = '';
            endDateInput.value = '';
            
            // Create hidden input for current page if it exists
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('page')) {
                const pageInput = document.createElement('input');
                pageInput.type = 'hidden';
                pageInput.name = 'page';
                pageInput.value = urlParams.get('page');
                filterForm.appendChild(pageInput);
            }
            
            filterForm.submit();
        }
    });

    // Custom date selection handlers
    [startDateInput, endDateInput].forEach(input => {
        input.addEventListener('change', function() {
            if (this.value) {
                dateRangeSelect.value = '';
            }
        });
    });

    // Form submit handler
    filterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const formData = new FormData(this);
        const queryString = new URLSearchParams(formData).toString();
        window.location.href = `/admin/salesReport?${queryString}`;
    });
});

// Export functions
function exportToPDF() {
    const currentUrl = new URL(window.location.href);
    const params = new URLSearchParams(currentUrl.search);
    window.location.href = `/admin/salesReport/pdf?${params.toString()}`;
}

function exportToExcel() {
    const currentUrl = new URL(window.location.href);
    const params = new URLSearchParams(currentUrl.search);
    window.location.href = `/admin/salesReport/excel?${params.toString()}`;
}

function resetFilter() {
    const filterForm = document.getElementById('filterForm');
    document.getElementById('dateRangeSelect').value = '';
    document.getElementById('startDate').value = '';
    document.getElementById('endDate').value = '';
    
    // Remove all existing hidden inputs
    filterForm.querySelectorAll('input[type="hidden"]').forEach(input => input.remove());
    
    // Submit the form
    filterForm.submit();
}
        
        </script>

    <%- include('../partials/admin/footer') %>